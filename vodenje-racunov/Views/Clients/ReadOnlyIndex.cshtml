@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Stranke</h2>
<div><br /></div>

<table id="clients" class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ime</th>
            <th scope="col">Tip</th>
            <th scope="col">Email</th>
            <th scope="col">Tel. št.</th>
        </tr>
    </thead>
    <tbody>
        <tr></tr>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#clients").DataTable({
                ajax: {
                    url: "/api/clients",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "id"
                    },
                    {
                        data: "name",
                        render: function (data, type, name) {
                            return "<b>" + data + "</b";
                        }
                    },
                    {
                        data: "type"
                    },
                    {
                        data: "email"
                    },
                    {
                        data: "phoneNumber"
                    }
                ]
            });
        })
    </script>
}


